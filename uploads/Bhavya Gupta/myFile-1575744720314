var divAddNewProduct=document.getElementById("aAddProduct");
var divAddProduct=document.getElementById("divAddProduct");
var divListProducts=document.getElementById("divListProducts");

AddNewProduct.addEventListener("click",function(event)
                                      {
                                          createEntryPanels();
                                      }
);
function insertBlankLine(targetElement)
{
  var br = document.createElement("br");
  targetElement.appendChild(br);
}
function createEntryPanels()
{
  var createlabel=document.createElement("label");
  createlabel.innerHTML="Add New Product";
  divAddProduct.appendChild(createlabel);

  insertBlankLine(divAddProduct);
  insertBlankLine(divAddProduct);

  var createInputName=document.createElement("input");
  createInputName.setAttribute("type","text");
	createInputName.setAttribute("id","txtProductName");
  createInputName.setAttribute("placeholder", "Enter the product name");
	createInputName.setAttribute("style","width:250px");
  divAddProduct.appendChild(createInputName);

  insertBlankLine(divAddProduct);
  insertBlankLine(divAddProduct);

  var createProductDesc=document.createElement("input");
  createProductDesc.setAttribute("id","txtProductDesc");
  createProductDesc.setAttribute("placeholder", "Enter the product description");
	createProductDesc.setAttribute("style","width:250px ; height:50px");
  divAddProduct.appendChild(createProductDesc);

  insertBlankLine(divAddProduct);
  insertBlankLine(divAddProduct);

  var createProductPrice=document.createElement("input");
  createProductPrice.setAttribute("type","text");
  createProductPrice.setAttribute("id","txtProductName");
  createProductPrice.setAttribute("placeholder", "Enter the product price");
  createProductPrice.setAttribute("style","width:250px");
  divAddProduct.appendChild(createProductPrice);

  insertBlankLine(divAddProduct);
  insertBlankLine(divAddProduct);

  var createProductQuantity=document.createElement("input");
  createProductQuantity.setAttribute("type","text");
  createProductQuantity.setAttribute("id","txtProductName");
  createProductQuantity.setAttribute("placeholder", "Enter the product quantity");
  createProductQuantity.setAttribute("style","width:250px");
  divAddProduct.appendChild(createProductQuantity);

  insertBlankLine(divAddProduct);
  insertBlankLine(divAddProduct);

  var createAddProductButton=document.createElement("button");
  createAddProductButton.setAttribute("id","btnAddButton");
  createAddProductButton.innerHTML = "Add Product";
  divAddProduct.appendChild(createAddProductButton);

  divAddNewProduct.appendChild(divAddProduct);

  createAddProductButton.addEventListener("click", function(event)
  {
    if(document.getElementById("createInputName").value=='\0'||document.getElementById("createProductDesc").value=='\0'||document.getElementById("createProductPrice").value=='\0'||document.getElementById("createProductQuantity").value=='\0')
    {
      alert("Invalid Input");
    }
    else
    {
      addProducttoArray();
    }
  }
  );

}
